<UserControl x:Class="Rozmawiator.Controls.MessageBubbleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rozmawiator.Controls"
             mc:Ignorable="d" 
             Height="Auto"
             MinHeight="26"
             d:DesignWidth="300">
    <UserControl.Resources>
        <Brush x:Key="Background">LightCoral</Brush>
        <Brush x:Key="Foreground">Black</Brush>
    </UserControl.Resources>
    <Grid>
        <Border Background="{DynamicResource Background}" CornerRadius="10">
            <TextBox x:Name="MessageTextBox" Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5" Text="Message" BorderBrush="{x:Null}" BorderThickness="0" TextWrapping="Wrap" IsReadOnly="True"/>
        </Border>
    </Grid>
</UserControl>
