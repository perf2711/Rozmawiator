<Window x:Class="Rozmawiator.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rozmawiator.Windows"
        mc:Ignorable="d"
        Title="O Rozmawiatorze" Height="240" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Top">
            <Label x:Name="TitleLabel" Content="Title" FontSize="18"/>
            <Label x:Name="AuthorsLabel" Content="Authors"/>
            <Grid Height="20"/>
            <TextBlock x:Name="AboutBlock" Text="About" Padding="5" FontSize="10"/>
        </StackPanel>
        <Grid Height="Auto" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="CloseButton" Content="OK" Width="100" Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
